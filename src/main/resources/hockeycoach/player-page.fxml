                <TableColumn fx:id="playerLastName" minWidth="150.0" prefWidth="150.0" text="Last Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="playerFirstName" minWidth="150.0" prefWidth="150.0" text="First Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="firstName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="playerPosition" minWidth="100.0" prefWidth="100.0" text="Position">
                    <cellValueFactory>
                        <PropertyValueFactory property="positions"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <ImageView fx:id="playerPhoto" fitHeight="200.0" fitWidth="200.0" layoutX="988.0" layoutY="60.0"
