        <TextField fx:id="aLicence" layoutX="574.0" layoutY="308.0" prefHeight="25.0" prefWidth="173.0"/>
        <Label layoutX="422.0" layoutY="308.0" prefHeight="25.0" prefWidth="150.0" text="A Licence"/>
        <TextField fx:id="bLicence" layoutX="574.0" layoutY="340.0" prefHeight="25.0" prefWidth="173.0"/>
