        <TextField fx:id="stick" layoutX="822.0" layoutY="339.0" prefHeight="25.0" prefWidth="150.0"/>
        <Label layoutX="757.0" layoutY="308.0" prefHeight="25.0" prefWidth="58.0" text="Role"/>
