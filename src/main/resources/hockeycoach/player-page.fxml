        <TableView fx:id="playerTeams" layoutX="988.0" layoutY="277.0" prefHeight="537.0" prefWidth="200.0">
            <columns>
                <TableColumn fx:id="teamColumn" minWidth="57.0" prefWidth="199.0" text="Teams">
                    <cellValueFactory>
                        <PropertyValueFactory property="name"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <HBox fx:id="controlBox" alignment="TOP_RIGHT" layoutX="5.0" layoutY="6.0" prefHeight="41.0" prefWidth="1190.0"
              spacing="5.0">
            <children>
                <Button fx:id="saveButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" text="Save"/>
                <Button fx:id="editButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" text="Edit"/>
                <Button fx:id="cancelButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" text="Cancel"/>
                <Button fx:id="deleteButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" text="Delete"/>
            </children>
        </HBox>
    </children>
