        <TextField fx:id="positions" layoutX="822.0" layoutY="277.0" prefHeight="25.0" prefWidth="150.0"/>
        <Label layoutX="574.0" layoutY="374.0" prefHeight="25.0" prefWidth="195.0" text="Strengths"/>
