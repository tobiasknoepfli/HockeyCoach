            <children>
                <TextField fx:id="street" prefHeight="20.0" prefWidth="400.0"/>
                <TextField fx:id="zipCity" prefHeight="20.0" prefWidth="400.0"/>
                <TextField fx:id="country" prefHeight="20.0" prefWidth="400.0"/>
            </children>
        </VBox>
        <VBox layoutX="422.0" layoutY="216.0" prefHeight="50.0" prefWidth="150.0">
