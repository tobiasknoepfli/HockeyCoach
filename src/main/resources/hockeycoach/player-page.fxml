        </VBox>
        <VBox layoutX="572.0" layoutY="216.0" prefHeight="50.0" prefWidth="400.0">
            <children>
                <TextField fx:id="phone" prefHeight="20.0" prefWidth="400.0"/>
                <TextField fx:id="email" prefHeight="20.0" prefWidth="400.0"/>
            </children>
        </VBox>
        <Label layoutX="422.0" layoutY="277.0" prefHeight="25.0" prefWidth="150.0" text="Jersey Number"/>
