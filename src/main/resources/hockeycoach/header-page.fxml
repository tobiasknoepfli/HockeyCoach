                                prefHeight="68.0" prefWidth="100.0" text="Home"/>
                        <Button fx:id="teamButton" mnemonicParsing="false" onAction="#teamButtonAction"
                                prefHeight="68.0" prefWidth="100.0" text="Team"/>
                        <Button fx:id="playerButton" mnemonicParsing="false" onAction="#playerButtonAction"
                                prefHeight="68.0" prefWidth="100.0" text="Player"/>
